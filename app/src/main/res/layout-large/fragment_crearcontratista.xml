<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.administrar.CrearContratista">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_home_black_36dp"
        android:text="Regresar Menu"
        android:id="@+id/btnMenu"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Agregar Contratista"
        android:id="@+id/btnAgregarContratista"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_above="@+id/btnMenu"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnAgregarContratista"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Crear Contratista"
            android:id="@+id/textView48"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="35dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView4"
            android:layout_marginLeft="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/cmpNombreContratista"
                android:layout_gravity="center_horizontal"
                android:hint="Nombre"
                android:layout_margin="5dp"
                android:textSize="25dp"
                android:layout_marginTop="10dp" />
        </ScrollView>

    </LinearLayout>

</RelativeLayout>