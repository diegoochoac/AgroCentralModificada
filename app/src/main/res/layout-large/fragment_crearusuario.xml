<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.administrar.CrearUsuario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Crear Usuario"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:textSize="35dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/cmpNombre"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:hint="Nombre"
                android:layout_margin="5dp"
                android:textSize="25dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Contratista:"
                    android:id="@+id/textView"
                    android:layout_margin="5dp"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Presione para seleccionar contratista"
                    android:layout_margin="5dp"
                    android:id="@+id/cmpAgreContratista"
                    android:textSize="25dp" />
            </TableRow>

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Agregar Usuario"
                android:id="@+id/btnAgregarUsuario"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="200dp"
                android:textSize="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>